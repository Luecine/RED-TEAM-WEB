<div class="menu-container-coin">
    <nav>
    <ul class="menu">
        <li class="dropdown-coin dropdown-5">
            <%= now%>
            <ul class="dropdown_menu dropdown_menu-5">
                <%- drop%>
            </ul>
        </li>
    </ul>
    </nav>
</div>
<%- include("common/CoinInfo")%>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary"><%= now%> 구매</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <form action="/bank/coinShop/buy" method="post" id="register">
                <div class="form-group">
                    <input type="number" class="form-control form-control-user" name="bit_count"
                           placeholder="구매할 비트를 입력해 주세요.">
                    <input type="hidden" name="coin_type" value=<%= coinInfo.market%>>
                    <br><a href="#" onclick="document.getElementById('register').submit();" class="btn btn-primary btn-user btn-block">구매</a>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">구매 목록</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

                <thead>
                <tr>
                    <th>구매 코인</th>
                    <th>구매 가격</th>
                    <th>구매 개수</th>
                    <th width="20%">판매</th>
                </tr>
                </thead>

                <tbody>
                <%- list%>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">코인 랭킹</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

                <thead>
                <tr>
                    <th>순위</th>
                    <th>ID</th>
                    <th>마진액</th>
                </tr>
                </thead>
                    <%- marginList%>
                <tbody>

                </tbody>
            </table>
        </div>
    </div>
</div>

